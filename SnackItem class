public class SnackItem {

    private String name;
    private double price;

    // Constructor to initialize the snack item
    public SnackItem(String name, double price) {
        this.name = name;
        this.price = price;
    }

    // Getter for the name of the snack
    public String getName() {
        return name;
    }

    // Getter for the price of the snack
    public double getPrice() {
        return price;
    }


    public String toString() {
        return name + " - $" + price;
    }
}
